## =========================================================
## CAVA Configuration
## Theme  : Aesthetic Japanese / Zero Two Inspired
## Author : Custom for Hyprland Rice
## Purpose: Clean, smooth, and visually pleasing audio spectrum
## =========================================================


[general]

# Frame refresh rate (FPS)
# Higher value = smoother animation, more CPU usage
framerate = 60

# Enable automatic sensitivity adjustment
# Helps prevent bars from clipping on loud sections
autosens = 1

# Initial sensitivity level (used before autosens adapts)
# 100 = normal, >100 = more reactive
sensitivity = 110

# Number of bars displayed
# Balanced for Waybar / widget usage
;bars = 62

# Width and spacing of each bar (character-based output)
bar_width = 2
bar_spacing = 1

# Frequency range for visualization
# Tuned for music clarity (bass → treble)
lower_cutoff_freq = 50
higher_cutoff_freq = 12000

# Disable sleep mode so animation feels alive
sleep_timer = 0


[input]

# Audio backend
# PulseAudio / PipeWire compatible (recommended for Spotify)
method = pulse

# Automatically select default monitor source
source = auto


[output]

# Output mode
# noncurses = smooth terminal rendering, low flicker
method = noncurses

# Bars grow from bottom (classic spectrum style)
orientation = bottom

# Stereo visualization
# Bass in the center, highs on the sides
channels = stereo

# Do not reverse frequency order
reverse = 0

# Reduce flickering in modern terminals (kitty, alacritty)
synchronized_sync = 1

# Show subtle idle bars when no sound is playing
show_idle_bar_heads = 1

# Disable waveform mode (use frequency spectrum)
waveform = 0


[color]

# Enable gradient coloring
gradient = 1

# Zero Two inspired palette
# Soft pink → cyan → red (anime aesthetic)
gradient_color_1 = '#f38ba8'  # Soft pink
gradient_color_2 = '#f5c2e7'  # Sakura pastel
gradient_color_3 = '#cba6f7'  # Lavender
gradient_color_4 = '#89b4fa'  # Sky blue
gradient_color_5 = '#74c7ec'  # Cyan
gradient_color_6 = '#89dceb'  # Aqua light
gradient_color_7 = '#eba0ac'  # Rose
gradient_color_8 = '#ff5f87'  # Zero Two red


[smoothing]

# Modern smoothing system
# Controls noise vs responsiveness
# 0   = raw & aggressive
# 100 = very smooth & slow
noise_reduction = 78


[eq]

# Equalizer multipliers
# Subtle tuning for anime music / J-pop / OST
1 = 1.2   # Bass
2 = 1.1
3 = 1.0   # Mid
4 = 1.05
5 = 1.15  # Treble
